<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.krisez.kotlin.activity.MainActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/mv_show_me_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/csl_getInfo"
        android:layout_marginBottom="@dimen/margin_small">
        <EditText
            android:id="@+id/et_other_info_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_get_other_info"/>

        <Button
            android:id="@+id/btn_get_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/vip"
            android:text="@string/sure"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/et_other_info_id"
            />
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/ib_locate_other"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="locateOthers"
        android:layout_margin="@dimen/margin_small"
        android:src="@drawable/ic_account"/>

</android.support.constraint.ConstraintLayout>